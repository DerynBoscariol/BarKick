﻿@model BarKick.Models.CocktailDto
@{
    ViewBag.Title = "DeleteConfirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Confirm</title>
</head>
<body>
    <div>
        <h2>Are you sure you want to delete this cocktail?</h2>
        <p>@Model.DrinkName made by @Model.FirstName @Model.LastName</p>

        <form action="/cocktail/Delete/@Model.DrinkId" method="POST">
            <input class="btn btn-danger" type="submit" value="Confirm Delete" />
        </form>
        <div class="mt-4">
            <a class="m-2" href="/Cocktail/Details/@Model.DrinkId">Cancel</a>
        </div>
    </div>
</body>
</html>