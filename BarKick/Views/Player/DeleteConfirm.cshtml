﻿@model BarKick.Models.PlayerDto
@{
    ViewBag.Title = "Delete";
}

<h2>Are you sure you want to delete this player?</h2>

    <p>Name: @Model.PlayerName</p>
    <form action="/Player/Delete/@Model.PlayerID" method="POST">
        <input class="btn btn-danger" type="submit" value="Delete" />
    </form>
    <div class="mt-4">
        <a href="/Player/Details/@Model.PlayerID">Cancel</a>
    </div>